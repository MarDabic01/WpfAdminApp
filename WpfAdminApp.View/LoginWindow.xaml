<Window x:Class="WpfAdminApp.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAdminApp.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="label" Content="User name"/>
        <TextBox x:Name="checkForUsername" Height="23" TextWrapping="Wrap" Width="165" Margin="0,0,0,10"/>
        <Label x:Name="label1" Content="Password"/>
        <TextBox x:Name="checkForPassword"  Height="23" TextWrapping="Wrap" Width="165" Margin="0,0,0,10"/>
        <Button x:Name="button" Content="Log In" HorizontalAlignment="Center" Width="75" Click="button_Click"/>
        <Label HorizontalAlignment="Center" Name="loginMessage" Content=""/>
    </StackPanel>
</Window>
